{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/",
				"i_am_root"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"python.jediEnabled": true,
	"python.linting.pylintArgs": [
		"--errors-only",
		"--generated-members=numpy.*,torch.*,cv2.*"
	],
	"python.linting.flake8Args": [
		"--ignore=E501,E226,F841,F405,F403,F401,I100,I201"
	],
	"codeLens.enable": true,
	"highlight.disableLanguages": [
		"text",
		"markdown",
		"",
		"qf",
		"nerdtree",
		"tex",
		"man",
		"gitcommit",
		"json",
		"fugitive",
		"diff",
		"git",
		"vim-plug"
	],
	"coc.preferences.formatOnType": true,
	"xml.java.home": "/usr/lib/jvm/java-openjdk"
}
